<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.isil.examplesjava.CalculadoraActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="fill_parent"
            android:background="#81BEF7"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginRight="5dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Valor 1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:id="@+id/eteValor1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Valor 2"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/eteValor2"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:hint="Resultado"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:id="@+id/tviResultado"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="#81BEF7"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img003"
                android:adjustViewBounds="true"
                android:layout_marginBottom="2dp"
                android:id="@+id/imgOp1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img004"
                android:adjustViewBounds="true"
                android:layout_marginBottom="2dp"
                android:id="@+id/imgOp2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img001"
                android:adjustViewBounds="true"
                android:layout_marginBottom="2dp"
                android:id="@+id/imgOp3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img002"
                android:adjustViewBounds="true"
                android:layout_marginBottom="2dp"
                android:id="@+id/imgOp4"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
